<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:entities="clr-namespace:LilaRent.MobileApp.Entities"
    xmlns:converters="clr-namespace:LilaRent.MobileApp.Converters"
    xmlns:markup="clr-namespace:LilaRent.MobileApp.MarkupExtensions"
    
    x:Class="LilaRent.MobileApp.Resources.DataTemplates.DateDayTemplate">


	<Border 
		Style="{StaticResource SmallOutlinelessBorderStyle}"
		VerticalOptions="Fill"
		HorizontalOptions="Fill"
		Padding="2">
		<VerticalStackLayout>
			<Label 
				Text="{Binding StringFormat='{0:dd ddd}'}"
				Style="{StaticResource PrimaryHeaderStyle}"
				HorizontalOptions="Center"
				VerticalOptions="Center"/>
			<Label
				Text="{Binding StringFormat='{0:MMM}'}"
				Style="{StaticResource AdditionalLabelStyle}"
				HorizontalOptions="Center"
				VerticalOptions="Center"/>
		</VerticalStackLayout>
	</Border>
</ContentView>
