<?xml version="1.0" encoding="utf-8" ?>
<components:BottomTabbedPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:components="clr-namespace:LilaRent.MobileApp.Components"
    xmlns:viewModels="clr-namespace:LilaRent.MobileApp.ViewModels"

    x:Class="LilaRent.MobileApp.Views.BottomTabbedView"
    x:DataType="viewModels:TabbedViewModel"
    
    ItemsSource="{Binding Tabs}"
    SelectedItem="{Binding CurrentTab, Mode=TwoWay}"
    ItemTemplate="{StaticResource TabTemplate}" />