<components:BigButterflyPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewModels="clr-namespace:LilaRent.MobileApp.ViewModels"
    xmlns:components="clr-namespace:LilaRent.MobileApp.Components"
	xmlns:markup="clr-namespace:LilaRent.MobileApp.MarkupExtensions"

    x:Class="LilaRent.MobileApp.Views.ConfirmationCanceledView"
    x:DataType="viewModels:ConfirmationCanceledViewModel"

    Title="{markup:Localize 'Cancel order'}"
    HeaderText="{markup:Localize 'Thanks for being with us'}"
    InnerContent="{markup:Localize 'Cancelation is successful'}">

    <components:BigButterflyPage.Buttons>
		<Button 
            Text="{markup:Localize 'Ok'}" 
            Style="{StaticResource PrimaryButtonStyle}"
            Command="{Binding OkCommand}" />

	</components:BigButterflyPage.Buttons>
</components:BigButterflyPage>
