<?xml version="1.0" encoding="utf-8" ?>
<components:BigButterflyPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"    
    xmlns:components="clr-namespace:LilaRent.MobileApp.Components"
    xmlns:viewModels="clr-namespace:LilaRent.MobileApp.ViewModels"
    
    x:Class="LilaRent.MobileApp.Views.RemovingAnnouncementLongTermView"
    x:DataType="viewModels:RemovingAnnouncementLongTermViewModel"
    
    Title="Удаление объявления"
    HeaderText="Мы за Вас рады)"
    InnerContent="Кстати, Вам необязательно удалять объявление, Вы можете просто добавить в график или БИО что объект сейчас забронирован.">

    <components:BigButterflyPage.Buttons>
        <Button 
            Text="Удалить" 
            Style="{StaticResource PrimaryButtonStyle}"
            Command="{Binding RemoveCommand}" />

    </components:BigButterflyPage.Buttons>
</components:BigButterflyPage>